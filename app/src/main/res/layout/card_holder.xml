<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cardview_image3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/man1" />

        <TextView
            android:id="@+id/businessNameForSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cardview_image3"
            android:paddingBottom="5dp"
            android:text="@string/business_name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/businessAddressForSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/businessNameForSearch"
            android:layout_toRightOf="@+id/cardview_image3"
            android:text="address"
            android:paddingBottom="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/descriptionForSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/businessAddressForSearch"
            android:layout_toRightOf="@+id/cardview_image3"
            android:text="category_hint"
            android:paddingBottom="5dp"
            android:textColor="@color/white" />


    </RelativeLayout>


</android.support.v7.widget.CardView>